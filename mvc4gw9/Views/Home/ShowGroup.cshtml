@model mvc4gw9.Models.Navigation

@{
    ViewBag.Title = "Категории продукции";
}

<div class="title">
    <h2>@ViewBag.Title</h2>
</div>

<div class="path">
    @foreach(var group in Model.Path)
        {
            @Html.ActionLink(@group.Name, "ShowGroup", new { GroupId=@group.Id})
            <span>\</span>
        }
</div>    
    
<br />
        
<div class="navigation">
    <ul>
    @foreach(var branch in Model.Branches)
    {
        <li>
            @Html.ActionLink(@branch.Group.Name, "ShowGroup", new { GroupId=@branch.Group.Id})
            <ul>
                @foreach (var subgroup in branch.Subgroups)
                {
                    <li>@Html.ActionLink(@subgroup.Name, "ShowGroup", new { GroupId=@subgroup.Id})</li>                
                }
            </ul>
        </li>
    }
    </ul>
</div>




